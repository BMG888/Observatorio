@model Observatorio.AspNetUsers

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://fonts.googleapis.com/css?family=Kanit" rel="stylesheet">

<h2 id="tituloih">Eliminar cuenta</h2>
<hr />

<h3 style="padding-left: 5%">¿Desea eliminar la siguiente información?</h3>
<br />
<div style="padding-left: 10%">
    <div class="row">
        <h4 id="subtitle">Nombre:</h4>
        <p>@Html.DisplayFor(model => model.Nombre)</p>
        <br />
        <h4 id="subtitle">Apellido:</h4>
        <p>@Html.DisplayFor(model => model.Apellido)</p>
        <br />
        <h4 id="subtitle">Correo electrónico:</h4>
        <p>@Html.DisplayFor(model => model.Email)</p>
        <br />
    </div>    

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            @Html.ActionLink("Atrás", "Index", null, new { @class = "btn btn-default btn-large" })
        </div>
    }
    <br />
</div>
